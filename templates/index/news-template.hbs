<h1 class="text-back-50">News</h1>
<div class="row">
    {{#each data}}
    <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="float-start me-3">
            <div class="date text-white text-center rounded-4 py-1"><h3>{{date}}</h3></div>
            <a href="#news/{{id}}" onclick="loadDetails('news/{{id}}','details-template','content')" class="btn btn-link readmore ps-0">Read more</a>
        </div>
        <div>
            <h3>{{name}}</h3>
            <p class="text-black-50">{{summary}}</p>
        </div>
    </div>
    {{/each}}
</div>