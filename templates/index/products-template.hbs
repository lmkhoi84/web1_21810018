<div class="row text-center py-5">
                {{#each data}}
                <div class="col col-lg-3 col-md-6 col-sm-12">
                    <img src="{{imagepath}}" alt="{{name}}" onmouseover="setActiveImagepath(this,'{{imagepath}}')" onmouseout="setActiveImagepath(this,'{{imagepath}}',false)">
                    <h3>{{name}}</h3>
                    <p class="text-black-50">{{summary}}</p>
                    <a href="#products/{{id}}" onclick="loadDetails('products/{{id}}','details-template','content')"  class="btn btn-link readmore">Read more</a>
                </div>
                {{/each}}
            </div>